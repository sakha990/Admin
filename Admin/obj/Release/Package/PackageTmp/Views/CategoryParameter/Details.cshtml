
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("~/Views/Shared/CategoryTree.cshtml", (List<Admin.Models.CategoryTree>)ViewBag.CategoryTree)
    </div>

    <div class="col-md-9">
        <form class="form-horizontal" action="/CategoryParameter/Create" method="post">
            <fieldset>
                <legend>Parameter Details</legend>
                <div class="form-group">
                    <label for="inputParentCategory" class="col-lg-2 control-label">Parent Category Name</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="inputParentCategory" value="@ViewBag.ParentCategoryName" disabled="disabled">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputParentCategory" class="col-lg-2 control-label"> Category Name</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="inputCategory" value="@ViewBag.CategoryName" disabled="disabled">
                    </div>
                </div>
                <input type="hidden" name="inputCategoryId" value="@ViewBag.CategoryId" />
                <div class="form-group">
                    <label for="inputParamter" class="col-lg-2 control-label">Parameter Name</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputParamterName" name="inputParamterName" value="@ViewBag.ParameterName" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputParamter" class="col-lg-2 control-label">Parameter Values</label>
                    <div class="col-lg-10">
                        <textarea class="form-control" id="inputParameterValues" name="inputParamterValues" >@ViewBag.ParameterValues</textarea>
                        <span class="help-block">Comma separated values.</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-success">Cancel</button>
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>




